---
const year = 2026;
---

<footer class="bg-ink text-white py-8 px-6">
  <div class="max-w-7xl mx-auto">
    <!-- Desktop: single row -->
    <div class="flex flex-col md:flex-row items-center justify-between gap-6">
      <!-- Logo -->
      <a
        href="#"
        class="font-display text-base font-bold text-white/90 hover:text-white transition-colors"
      >
        Valley Forge Landscape Design
      </a>

      <!-- Nav links -->
      <ul class="flex items-center gap-6 font-body text-sm text-white/60">
        <li><a href="#services" class="hover:text-white transition-colors">Services</a></li>
        <li><a href="#about" class="hover:text-white transition-colors">About</a></li>
        <li><a href="#service-area" class="hover:text-white transition-colors">Service Area</a></li>
        <li><a href="#contact" class="hover:text-white transition-colors">Contact</a></li>
      </ul>

      <!-- Copyright -->
      <p class="font-body text-sm text-white/40">
        &copy; {year} Valley Forge Landscape Design. All rights reserved.
      </p>
    </div>
  </div>
