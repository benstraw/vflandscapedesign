---

<section id="services" class="py-24 lg:py-32 px-6 bg-warm-white">
  <div class="max-w-7xl mx-auto">
    <!-- Heading -->
    <div class="mb-16 lg:mb-20">
      <span class="font-body text-sm font-medium tracking-widest uppercase text-forest">
        Our Services
      </span>
      <h2 class="font-display text-4xl lg:text-5xl font-bold text-ink mt-3">What We Do</h2>
    </div>

    <!-- Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-12 lg:gap-16">
      {services.map((service) => (
        <div class="flex flex-col gap-4">
          <div class="text-forest" set:html={service.icon} />
          <h3 class="font-display text-xl font-bold text-ink">{service.name}</h3>
          <p class="font-body text-base text-ink/70 leading-relaxed">{service.description}</p>
        </div>
      ))}
    </div>
  </div>
</section>
